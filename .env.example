# ProfesorXTrader Environment Configuration

# ===========================================
# Binance API Configuration
# ===========================================
# Get your API keys from: https://www.binance.com/en/my/settings/api-management
NEXT_PUBLIC_BINANCE_API_KEY=your_binance_api_key_here
NEXT_PUBLIC_BINANCE_SECRET_KEY=your_binance_secret_key_here

# Use testnet for development (set to false for production)
NEXT_PUBLIC_BINANCE_TESTNET=true

# Binance API endpoints
NEXT_PUBLIC_BINANCE_BASE_URL=https://api.binance.com
NEXT_PUBLIC_BINANCE_TESTNET_URL=https://testnet.binance.vision

# ===========================================
# AI & Machine Learning
# ===========================================
# Groq API for AI analysis (get from: https://console.groq.com/keys)
NEXT_PUBLIC_GROQ_API_KEY=your_groq_api_key_here

# MyShell AI Integration
NEXT_PUBLIC_MYSHELL_API_KEY=your_myshell_api_key_here

# ===========================================
# Application Configuration  
# ===========================================
NEXT_PUBLIC_APP_ENV=development
NEXT_PUBLIC_API_BASE_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=ProfesorXTrader
NEXT_PUBLIC_APP_VERSION=1.0.0

# ===========================================
# Four.meme Integration
# ===========================================
NEXT_PUBLIC_FOUR_MEME_REF_CODE=your_referral_code_here
NEXT_PUBLIC_FOUR_MEME_API_URL=https://api.four.meme

# ===========================================
# Database Configuration (Optional)
# ===========================================
# DATABASE_URL=postgresql://username:password@localhost:5432/profesorxtrader
# REDIS_URL=redis://localhost:6379

# ===========================================
# Analytics & Monitoring
# ===========================================
# NEXT_PUBLIC_ANALYTICS_ID=your_analytics_id
# SENTRY_DSN=your_sentry_dsn

# ===========================================
# Security
# ===========================================
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# ===========================================
# Development Tools
# ===========================================
# Enable debug logging
NEXT_PUBLIC_DEBUG_MODE=true

# Disable telemetry
NEXT_TELEMETRY_DISABLED=1

# ===========================================
# Production Overrides
# ===========================================
# Uncomment and configure for production deployment
# NEXT_PUBLIC_APP_ENV=production
# NEXT_PUBLIC_BINANCE_TESTNET=false
# NEXT_PUBLIC_DEBUG_MODE=false
# NEXT_PUBLIC_API_BASE_URL=https://your-domain.com