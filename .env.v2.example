# ProfesorXTrader v2.0 - MultiversX Integration Environment
# Copy this file to .env.local and fill in your API keys

# =============================================================================
# MultiversX Configuration
# =============================================================================

# Network Configuration (devnet/testnet/mainnet)
NEXT_PUBLIC_MVX_NETWORK=devnet
NEXT_PUBLIC_MVX_CHAIN_ID=D

# MultiversX API Endpoints
NEXT_PUBLIC_MVX_API_URL=https://devnet-api.multiversx.com
NEXT_PUBLIC_MVX_GATEWAY_URL=https://devnet-gateway.multiversx.com
NEXT_PUBLIC_MVX_EXPLORER_URL=https://devnet-explorer.multiversx.com

# Wallet Integration
NEXT_PUBLIC_MVX_WEB_WALLET_URL=https://devnet-wallet.multiversx.com
NEXT_PUBLIC_WALLET_CONNECT_V2_PROJECT_ID=your_wallet_connect_project_id

# Smart Contracts (Devnet addresses)
NEXT_PUBLIC_MVX_DEX_CONTRACT=erd1qqqqqqqqqqqqqpgqq66xk9gfr4esuhem3jru86wg5hvp33a62jps2fy57p
NEXT_PUBLIC_MVX_FARM_CONTRACT=erd1qqqqqqqqqqqqqpgqzqvm5ywqqf524efwrhr039tjs29w0qltkklsa05pk7
NEXT_PUBLIC_MVX_STAKING_CONTRACT=erd1qqqqqqqqqqqqqqqpqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqplllst77y4l

# =============================================================================
# Cross-Chain Integration
# =============================================================================

# Binance API (for cross-chain arbitrage)
BINANCE_API_KEY=your_binance_api_key
BINANCE_SECRET_KEY=your_binance_secret_key
BINANCE_TESTNET=true

# Ethereum RPC (for cross-chain support)
NEXT_PUBLIC_ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your_infura_key
NEXT_PUBLIC_POLYGON_RPC_URL=https://polygon-mainnet.infura.io/v3/your_infura_key
NEXT_PUBLIC_ARBITRUM_RPC_URL=https://arbitrum-mainnet.infura.io/v3/your_infura_key

# =============================================================================
# AI & Analytics Features
# =============================================================================

# OpenAI pentru analiza sentiment și predictions
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4-turbo-preview

# Groq pentru fast inference
GROQ_API_KEY=your_groq_api_key
GROQ_MODEL=mixtral-8x7b-32768

# Cohere pentru embeddings și semantic search
COHERE_API_KEY=your_cohere_api_key

# =============================================================================
# Data Sources & APIs
# =============================================================================

# CoinGecko pentru market data
COINGECKO_API_KEY=your_coingecko_api_key

# News APIs pentru sentiment analysis
NEWS_API_KEY=your_news_api_key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key

# Social Media APIs
TWITTER_BEARER_TOKEN=your_twitter_bearer_token
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret

# =============================================================================
# Database & Storage
# =============================================================================

# PostgreSQL pentru user data și analytics
DATABASE_URL=postgresql://user:password@localhost:5432/profesorxtrader_v2

# Redis pentru caching și real-time data
REDIS_URL=redis://localhost:6379

# Supabase pentru managed database (optional)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_key

# =============================================================================
# Monitoring & Analytics
# =============================================================================

# Sentry pentru error tracking
SENTRY_DSN=your_sentry_dsn
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=your_sentry_project

# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=your_ga_measurement_id

# Vercel Analytics
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your_vercel_analytics_id

# =============================================================================
# Feature Flags
# =============================================================================

# Enable/disable features pentru testing
NEXT_PUBLIC_ENABLE_AI_FEATURES=true
NEXT_PUBLIC_ENABLE_CROSS_CHAIN=true
NEXT_PUBLIC_ENABLE_OPTIONS_TRADING=false
NEXT_PUBLIC_ENABLE_SOCIAL_FEATURES=false

# Debug modes
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_VERBOSE_LOGGING=false

# =============================================================================
# Deployment Configuration
# =============================================================================

# Environment identifier
NODE_ENV=development
NEXT_PUBLIC_APP_ENV=development

# Domain configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_BASE_URL=http://localhost:3000/api

# CDN și assets
NEXT_PUBLIC_CDN_URL=https://cdn.profesorxtrader.com
NEXT_PUBLIC_IMAGES_DOMAIN=images.profesorxtrader.com